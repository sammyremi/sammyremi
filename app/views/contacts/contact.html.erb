<body>
    <div id="contact">
        <div class="container">
            <div class="row" style="padding-top: 50px;">
                <div class="contact-left">
                    <h1 class="sub-title" style="color: #00c0f9; ">Contact Me</h1>
                    <p><i class="fa-solid fa-envelope-open-text"></i> adebayorsamuelasgmail.com</p>
                    <p><i class="fa-solid fa-square-phone"></i> +2348147468979</p>
                    <div class="social-icons">
                        <a href="https://twitter.com/sammy_remi"><i class="fa-brands fa-twitter"></i></a>
                        <a href="https://github.com/sammyremi"><i class="fa-brands fa-github"></i></a>
                        <a href="https://www.instagram.com/sammyremi"><i class="fa-brands fa-instagram"></i></a>
                        <a href="https://linkedin.com/in/sammyremi""><i class="fa-brands fa-linkedin"></i></a>
                    </div>

                    <div style="padding-top: 80px; padding-left: 60px;">
                        <%= link_to '', '/Resume.pdf', download: 'Resume.pdf', class: 'fa-solid fa-download', style: 'text-decoration: none; font-size: 44px; color: #00c0f9;' %>
                    </div>
                    <div style="padding-top: 5px; padding-left: 54px; font-size: 10px;">
                        <i class="fa-solid fa-r"></i>
                        <i class="fa-solid fa-e"></i>
                        <i class="fa-solid fa-s"></i>
                        <i class="fa-solid fa-u"></i>
                        <i class="fa-solid fa-m"></i>
                        <i class="fa-solid fa-e"></i>
                    </div>
                  
                  

                </div>
                <div class="contact-right">
                    <form action="/contact" method="post" name="submit-to-google-sheet">
                        <input type="text" name="Name" placeholder="Your Name" required>
                        <input type="email" name="Email" placeholder="Your Email" required>
                        <textarea name="Message" rows="6" placeholder="Your Message"></textarea>
                        <button type="submit" style="font-size: 25px; color: #00c0f9; background-color: #000000; border: none;">
                        
                            <i class="fa-solid fa-paper-plane" style="cursor: pointer; padding-top: 5px;"></i>
                        </button>
                    
                    </form>
                    <span id="msg" style="padding-top: 10px;"></span>
                </div>
            </div>

        </div>
        <div class="copyright">
            <p> Copyright <i class="fa-regular fa-copyright"></i> Samuel. All right reserved</p>
        </div>
    </div>

    <style>
    @keyframes fall {
      0% {
        transform: translateY(-100%);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
      }
    }
  
    .fall-animation {
      animation: fall 0.5s ease-out forwards;
      opacity: 0;
    }
  </style>


    <script>
        var sidemenu = document.getElementById("sidemenu");

        function openmenu(){
            sidemenu.style.right = "0";
        }

        function closemenu(){
            sidemenu.style.right = "-200px";
        }
    </script>

    <script>
        const scriptURL = 'https://script.google.com/macros/s/AKfycby5ZfjoAY1vdLH2MSbSbdQ2U97oU55w4XroDHYqno8rymivjf8TmDdS_8MRYvq-f9BMYw/exec'
        const form = document.forms['submit-to-google-sheet']

        const msg = document.getElementById("msg")

        form.addEventListener('submit', e => {
            e.preventDefault()
            fetch(scriptURL, { method: 'POST', body: new FormData(form)})
            .then(response => {
                msg.innerHTML = "Message Sent Successfuly"
                setTimeout(function(){
                    msg.innerHTML = ""
                }, 1000)
                form.reset()
            })
            .catch(error => console.error('Error!', error.message))
        })
</script>
</body>