
<% year = @today_date%>
<% split_date = year.split("-") %>
<% year = split_date[0]%>
<% month = split_date[1]%>



<% case month %>
<% when "01"%>
    <% month = "January"%>
<% when "02"%>
    <% month = "Febuary"%>
<% when "03"%>
    <% month = "March"%>
<% when "04"%>
    <% month = "April"%>
<% when "05"%>
    <% month = "May"%>
<% when "06"%>
    <% month = "June"%>
<% when "07"%>
    <% month = "July"%>
<% when "08"%>
    <% month = "August"%>
<% when "09"%>
    <% month = "September"%>
<% when "10"%>
    <% month = "October"%>
<% when "11"%>
    <% month = "November"%>
<% when "12"%>
    <% month = "December"%>
<% else %>
<% end %>

<% week = @wday %>

<% case week %>
<% when "0"%>
    <% week = "Sunday"%>
<% when "1"%>
    <% week = "Monday"%>
<% when "2"%>
    <% week = "Tuesday"%>
<% when "3"%>
    <% week = "Wednesday"%>
<% when "4"%>
    <% week = "Thursday"%>
<% when "5"%>
    <% week = "Friday"%>
<% when "6"%>
    <% week = "Saturday"%>
<% else %>
<% end %>

